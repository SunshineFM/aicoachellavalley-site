---
import ActionCard from "../../components/ActionCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";
---

<BaseLayout title="Tools | AI Coachella Valley">
  <PageHero
    title="Tools"
    description="Practical tools for readiness checks, signal quality, and operational AI visibility."
  />

  <section>
    <h2>Top Paths</h2>
    <div class="path-grid">
      <ActionCard
        title="AI Visibility Checkup"
        description="Run a structured readiness and visibility review for a target page."
        href="/tools/aio"
        buttonLabel="Open AI Visibility Checkup"
      />
      <ActionCard
        title="Latest Briefs"
        description="Review current evidence signals before deciding implementation priorities."
        href="/briefs"
        buttonLabel="Open Latest Briefs"
      />
      <ActionCard
        title="Submit a Brief"
        description="Share AI outcomes and operational proof artifacts for publication."
        href="/submit"
        buttonLabel="Open Submit a Brief"
      />
    </div>
  </section>
</BaseLayout>

<style>
  section + section {
    margin-top: var(--s-7);
  }

  .path-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
    gap: var(--s-4);
  }
</style>
