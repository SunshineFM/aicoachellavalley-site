---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const signals = await getCollection("signals");

  return signals.map((signal) => ({
    params: { slug: signal.slug },
    props: { signal },
  }));
}

type Props = {
  signal: CollectionEntry<"signals">;
};

const { signal } = Astro.props;
const { Content } = await render(signal);

const dateFormatter = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "2-digit",
});

const normalizedSources = (signal.data.sources ?? []).map((source) =>
  typeof source === "string"
    ? { url: source, label: source, type: "", notes: "" }
    : {
        url: source.url,
        label: source.label || source.url,
        type: source.type || "",
        notes: source.notes || "",
      }
);
---

<BaseLayout title={`${signal.data.title} | Briefs`}>
  <article>
    <h1>{signal.data.title}</h1>
    <p>
      <strong>Date:</strong> {dateFormatter.format(signal.data.date)}
      {signal.data.time ? ` ${signal.data.time}` : ""}
    </p>
    <p>
      <strong>City:</strong> {signal.data.city ?? "Regional"}
      <span aria-hidden="true"> | </span>
      <strong>Sector:</strong> {signal.data.sector ?? "Cross-sector"}
    </p>
    <p>
      <strong>Brief type:</strong> {signal.data.signal_type}
      <span aria-hidden="true"> | </span>
      <strong>Confidence:</strong> {signal.data.confidence}
    </p>
    <p><strong>Summary:</strong> {signal.data.summary}</p>

    {signal.data.tags && signal.data.tags.length > 0 ? (
      <p><strong>Tags:</strong> {signal.data.tags.join(", ")}</p>
    ) : null}

    <hr />
    <Content />

    {normalizedSources.length > 0 ? (
      <>
        <h2>Sources</h2>
        <ul>
          {normalizedSources.map((source) => (
            <li>
              <a href={source.url} target="_blank" rel="noreferrer">{source.label}</a>
              {source.type ? ` (${source.type})` : ""}
              {source.notes ? ` - ${source.notes}` : ""}
            </li>
          ))}
        </ul>
      </>
    ) : null}

    <p>
      <a href="/briefs">Back to Briefs</a>
      <span aria-hidden="true"> | </span>
      <a href="/">Home</a>
    </p>
  </article>
</BaseLayout>
