---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ActionCard from "../../components/ActionCard.astro";
import PageHero from "../../components/PageHero.astro";

const paths = [
  {
    title: "Latest Briefs",
    description: "Review recent, date-stamped updates on regional AI adoption.",
    href: "/briefs",
  },
  {
    title: "Submit a Brief",
    description: "Share a new local AI signal for editorial review and publication.",
    href: "/submit",
  },
  {
    title: "City Briefs",
    description: "Browse AI evidence and updates by city across the valley.",
    href: "/cities",
  },
  {
    title: "State of AI",
    description: "Track broader trends, benchmarks, and strategic context.",
    href: "/state-of-ai",
  },
  {
    title: "Events",
    description: "Find workshops, sessions, and practical implementation programs.",
    href: "/events",
  },
  {
    title: "Tools",
    description: "Use practical diagnostics and resources to improve visibility.",
    href: "/tools",
  },
];
---

<BaseLayout
  title="Marketplace | AI Coachella Valley"
  description="Marketplace hub for curated tools, services, and practical pathways across briefs, cities, events, and submissions."
>
  <PageHero
    title="Marketplace"
    description="A curated hub for practical AI tools, services, and pathways. Start from briefs, submit new evidence, or navigate city and sector signals."
  />

  <section aria-labelledby="top-paths-title">
    <h2 id="top-paths-title">Top Paths</h2>
    <div class="path-grid">
      {paths.map((path) => (
        <ActionCard title={path.title} description={path.description} href={path.href} buttonLabel={`Open ${path.title}`} />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .path-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
    gap: var(--s-4);
  }
</style>
