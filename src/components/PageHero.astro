---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props as Props;
---

<section class="page-hero">
  <h1>{title}</h1>
  {description ? <p>{description}</p> : null}
  <slot />
</section>

<style>
  .page-hero {
    border: 1px solid var(--c-border);
    border-radius: var(--r-md);
    background: var(--c-surface);
    box-shadow: var(--shadow-1);
    padding: var(--s-6);
    margin-bottom: var(--s-6);
  }

  .page-hero p {
    max-width: 68ch;
    color: var(--c-muted);
    margin-bottom: 0;
  }

  .page-hero :global(.hero-actions) {
    margin-top: var(--s-4);
    display: flex;
    flex-wrap: wrap;
    gap: var(--s-3);
  }
</style>
