---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  fullBleed?: boolean;
}

const CANONICAL_ORIGIN = "https://www.aicoachellavalley.com";
const DEFAULT_DESCRIPTION =
  "AI Coachella Valley tracks practical AI adoption across cities and sectors with dated briefs, tools, and workshops for local operators.";

const { title, description = DEFAULT_DESCRIPTION, fullBleed = false } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, CANONICAL_ORIGIN).toString();

const siteJsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${CANONICAL_ORIGIN}/#organization`,
      name: "AI Coachella Valley (AICV)",
      url: `${CANONICAL_ORIGIN}/`,
    },
    {
      "@type": "WebSite",
      "@id": `${CANONICAL_ORIGIN}/#website`,
      name: "AI Coachella Valley (AICV)",
      url: `${CANONICAL_ORIGIN}/`,
      inLanguage: "en-US",
      publisher: {
        "@id": `${CANONICAL_ORIGIN}/#organization`,
      },
    },
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <script type="application/ld+json" set:html={JSON.stringify(siteJsonLd)}></script>
  </head>
  <body class="site">
    <header>
      <div class="header-inner">
        <a href="/" class="brand">AI Coachella Valley (AICV)</a>
        <div class="header-right">
          <nav aria-label="Primary">
            <a href="/briefs">Marketplace</a>
            <a href="/briefs">Briefs</a>
            <a href="/state-of-ai">State of AI</a>
            <a href="/events">Events</a>
            <a href="/cities">Cities</a>
            <details class="nav-dropdown">
              <summary>Tools</summary>
              <div class="dropdown-menu">
                <a href="/tools/aio">AI Visibility Checkup</a>
              </div>
            </details>
            <details class="nav-dropdown">
              <summary>About</summary>
              <div class="dropdown-menu">
                <a href="/about">About</a>
                <a href="/submit">Submit a Brief</a>
                <a href="/contact">Contact</a>
              </div>
            </details>
          </nav>
          <a href="/#subscribe" class="utility-link">Subscribe</a>
        </div>
      </div>
    </header>
    <main class="site-main">
      {fullBleed ? (
        <slot />
      ) : (
        <div class="page-container">
          <slot />
        </div>
      )}
    </main>
    <footer>
      <div class="footer-inner">
        <a href="/#subscribe">Subscribe</a>
        <a href="/contact">Contact</a>
        <a href="/projects">Partners</a>
        <a href="/submit">Submit a Brief</a>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(*) {
    box-sizing: border-box;
  }

  :global(html, body) {
    height: 100%;
  }

  :global(body) {
    margin: 0;
    font-family: "Segoe UI", "Helvetica Neue", Arial, sans-serif;
    background: var(--aicv-page-bg, #f7f8fa);
    color: #1a1a1a;
    line-height: 1.55;
  }

  .site {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background: var(--aicv-indigo, #0b1026);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .header-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 1rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.25rem;
    justify-content: space-between;
    align-items: center;
  }

  .header-right {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.25rem;
    align-items: center;
    justify-content: flex-end;
  }

  .brand {
    color: #ffffff;
    font-weight: 700;
    letter-spacing: 0.02em;
    text-decoration: none;
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .utility-link {
    color: #ffffff;
    font-weight: 600;
    text-decoration: none;
  }

  .utility-link:hover,
  .utility-link:focus-visible {
    text-decoration: underline;
  }

  nav a {
    color: #ffffff;
    text-decoration: none;
  }

  nav a:hover,
  nav a:focus-visible {
    text-decoration: underline;
  }

  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown summary {
    color: #ffffff;
    cursor: pointer;
    list-style: none;
  }

  .nav-dropdown summary::-webkit-details-marker {
    display: none;
  }

  .nav-dropdown summary:hover,
  .nav-dropdown summary:focus-visible {
    text-decoration: underline;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: calc(100% + 0.3rem);
    left: 0;
    min-width: 13rem;
    padding: 0.55rem;
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 0.4rem;
    background: #141b3b;
    z-index: 20;
  }

  .nav-dropdown[open] .dropdown-menu {
    display: grid;
    gap: 0.45rem;
  }

  .dropdown-menu a {
    color: #ffffff;
    text-decoration: none;
    white-space: nowrap;
  }

  .dropdown-menu a:hover,
  .dropdown-menu a:focus-visible {
    text-decoration: underline;
  }

  @media (max-width: 48rem) {
    .dropdown-menu {
      position: static;
      margin-top: 0.35rem;
    }
  }

  .site-main {
    flex: 1;
    display: block;
  }

  .page-container {
    width: min(calc(100% - 2rem), 980px);
    margin-inline: auto;
    padding: 2.5rem 0 3rem;
  }

  @media (min-width: 48rem) {
    .page-container {
      width: min(calc(100% - 3rem), 1040px);
      padding: 3rem 0 3.5rem;
    }
  }

  footer {
    border-top: 1px solid #d8dbe1;
    background: #ffffff;
  }

  .footer-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 1rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1rem;
  }

  .footer-inner a {
    color: #454b57;
    font-size: 0.95rem;
    text-decoration: none;
  }

  .footer-inner a:hover,
  .footer-inner a:focus-visible {
    text-decoration: underline;
  }
</style>
