---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  fullBleed?: boolean;
}

const FALLBACK_CANONICAL_ORIGIN = "https://aicoachellavalley-site.vercel.app";
const vercelHost = import.meta.env.VERCEL_URL;
const vercelOrigin = vercelHost
  ? vercelHost.startsWith("http://") || vercelHost.startsWith("https://")
    ? vercelHost
    : `https://${vercelHost}`
  : undefined;
const CANONICAL_ORIGIN = import.meta.env.PUBLIC_CANONICAL_ORIGIN || vercelOrigin || FALLBACK_CANONICAL_ORIGIN;
const DEFAULT_DESCRIPTION =
  "AI Coachella Valley tracks practical AI adoption across cities and sectors with dated briefs, tools, and workshops for local operators.";

const { title, description = DEFAULT_DESCRIPTION, fullBleed = false } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, CANONICAL_ORIGIN).toString();

const siteJsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${CANONICAL_ORIGIN}/#organization`,
      name: "AI Coachella Valley (AICV)",
      url: `${CANONICAL_ORIGIN}/`,
    },
    {
      "@type": "WebSite",
      "@id": `${CANONICAL_ORIGIN}/#website`,
      name: "AI Coachella Valley (AICV)",
      url: `${CANONICAL_ORIGIN}/`,
      inLanguage: "en-US",
      publisher: {
        "@id": `${CANONICAL_ORIGIN}/#organization`,
      },
    },
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400..800&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <script type="application/ld+json" set:html={JSON.stringify(siteJsonLd)}></script>
  </head>
  <body class="site">
    <header>
      <div class="header-inner">
        <a href="/" class="brand">AI Coachella Valley (AICV)</a>
        <div class="header-right">
          <nav aria-label="Primary">
            <a href="/start-here">Start Here</a>
            <a href="/cities">Cities</a>
            <a href="/state-of-ai">State of AI</a>
            <a href="/briefs">Briefs</a>
            <a href="/submit">Submit</a>
            <a href="/about">About</a>
          </nav>
          <a href="/#subscribe" class="utility-link">Subscribe</a>
        </div>
      </div>
    </header>
    <main class="site-main">
      {fullBleed ? (
        <slot />
      ) : (
        <div class="page-container">
          <slot />
        </div>
      )}
    </main>
    <footer>
      <div class="footer-inner">
        <a href="/#subscribe">Subscribe</a>
        <a href="/contact">Contact</a>
        <a href="/projects">Partners</a>
        <a href="/submit">Submit a Brief</a>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(*) {
    box-sizing: border-box;
  }

  :global(html, body) {
    height: 100%;
  }

  :global(body) {
    margin: 0;
    font-family: var(--font-ui, "Inter", "Segoe UI", "Helvetica Neue", Arial, sans-serif);
    background: var(--c-bg, #f2f5fb);
    color: var(--c-text, #121826);
    line-height: 1.55;
  }

  .site {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background: var(--c-indigo, #1c2f72);
    border-bottom: 1px solid color-mix(in srgb, var(--c-indigo, #1c2f72) 78%, #ffffff 22%);
  }

  .header-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 1rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.25rem;
    justify-content: space-between;
    align-items: center;
  }

  .header-right {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.25rem;
    align-items: center;
    justify-content: flex-end;
  }

  .brand {
    color: #ffffff;
    font-weight: 700;
    letter-spacing: 0.02em;
    text-decoration: none;
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .utility-link {
    color: #ffffff;
    font-weight: 600;
    text-decoration: none;
  }

  .utility-link:hover,
  .utility-link:focus-visible {
    color: var(--c-volt, #c7ff2e);
    text-decoration: underline;
  }

  nav a {
    color: #ffffff;
    text-decoration: none;
  }

  nav a:hover,
  nav a:focus-visible {
    color: var(--c-volt, #c7ff2e);
    text-decoration: underline;
  }

  .site-main {
    flex: 1;
    display: block;
  }

  .page-container {
    width: min(calc(100% - 2rem), 980px);
    margin-inline: auto;
    padding: 2.5rem 0 3rem;
  }

  @media (min-width: 48rem) {
    .page-container {
      width: min(calc(100% - 3rem), 1040px);
      padding: 3rem 0 3.5rem;
    }
  }

  footer {
    border-top: 1px solid var(--c-border, #d6deeb);
    background: var(--c-surface, #ffffff);
  }

  .footer-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 1rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1rem;
  }

  .footer-inner a {
    color: var(--c-muted, #56607a);
    font-size: 0.95rem;
    text-decoration: none;
  }

  .footer-inner a:hover,
  .footer-inner a:focus-visible {
    text-decoration: underline;
  }
</style>
